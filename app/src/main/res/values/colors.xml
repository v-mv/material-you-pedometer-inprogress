<resources>
    <color name="darkgrey">#757575</color>
    <color name="colorPrimary">?attr/colorPrimary</color>
    <color name="colorPrimaryDark">?attr/colorPrimaryDark</color>
    <color name="colorAccent">?attr/colorSecondary</color>
    <color name="transparent">#00000000</color>
    <color name="white">#ffffff</color>
    <color name="black">#000000</color>
    <color name="middlegrey">#A8A8A8</color>
    <color name="yellow">#f6d126</color>
    <color name="green">#388E3C</color>

    <!-- dots inactive colors -->
    <color name="dot_dark_screen">#026499</color>

    <!-- dots active colors -->
    <color name="dot_light_screen">#448bb2</color>
    <color name="ic_background">#3680BB</color>

    <array name="array_dot_active">
        <item>@color/dot_light_screen</item>
        <item>@color/dot_light_screen</item>
        <item>@color/dot_light_screen</item>
        <item>@color/dot_light_screen</item>
        <item>@color/dot_light_screen</item>
    </array>

    <array name="array_dot_inactive">
        <item>@color/dot_dark_screen</item>
        <item>@color/dot_dark_screen</item>
        <item>@color/dot_dark_screen</item>
        <item>@color/dot_dark_screen</item>
        <item>@color/dot_dark_screen</item>
    </array>

    <style name="CardViewPrimaryTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewSubTitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/middlegrey</item>
    </style>

    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>